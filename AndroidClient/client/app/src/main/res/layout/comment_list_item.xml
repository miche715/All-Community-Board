<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/margin_background_color"
    android:paddingBottom="1dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/background_color"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/background_color"
            android:orientation="vertical"
            android:weightSum="10">

            <TextView
                android:id="@+id/textTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/jalnan_otf"
                android:gravity="center_vertical|left"
                android:paddingLeft="3dp"
                android:text="댓글 내용 영역"
                android:textColor="@color/dark_text_color"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="7"
                android:background="@color/background_color"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/createdAtTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.6"
                    android:fontFamily="@font/jalnan_otf"
                    android:gravity="left|fill_vertical"
                    android:paddingLeft="3dp"
                    android:text="01/01 22:22"
                    android:textColor="@color/midium_text_color"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/writerTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.4"
                    android:fontFamily="@font/jalnan_otf"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="3dp"
                    android:text="testusername"
                    android:textColor="@color/midium_text_color"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="9"
            android:backgroundTint="@color/delete_button_color"
            android:fontFamily="@font/jalnan_otf"
            android:foregroundGravity="top"
            android:gravity="center"
            android:text="x"
            android:textColor="@color/light_text_color"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>