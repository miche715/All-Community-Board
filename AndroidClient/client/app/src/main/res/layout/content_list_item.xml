<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/margin_background_color"
    android:paddingBottom="1dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/background_color"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleTextview"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/jalnan_otf"
            android:gravity="center_vertical|left"
            android:paddingLeft="3dp"
            android:text="TitleTitleTitle"
            android:textColor="@color/dark_text_color"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/background_color"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="3"
            android:background="@color/background_color"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/createdAtTextview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/jalnan_otf"
                android:gravity="center_vertical|left"
                android:paddingLeft="3dp"
                android:text="01/01 22:22"
                android:textColor="@color/midium_text_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/writerTextview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/jalnan_otf"
                android:gravity="center_vertical|left"
                android:paddingLeft="3dp"
                android:text="testusername"
                android:textColor="@color/midium_text_color"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="7"
            android:background="@color/background_color"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/thumb_up_48px" />

            <TextView
                android:id="@+id/goodTextview"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:fontFamily="@font/jalnan_otf"
                android:gravity="center_vertical|center"
                android:paddingLeft="4dp"
                android:text="0"
                android:textAlignment="textStart"
                android:textColor="#D32F2F"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/chat_48px" />

            <TextView
                android:id="@+id/commentNumTextview"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:fontFamily="@font/jalnan_otf"
                android:gravity="center_vertical|center"
                android:paddingLeft="4dp"
                android:text="0"
                android:textAlignment="viewStart"
                android:textColor="#00796B"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>