<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".content.view.GetContentActivity">

    <Button
        android:id="@+id/modifyButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="#000000"
        android:backgroundTint="@color/button_color"
        android:text="수정"
        app:layout_constraintBottom_toBottomOf="@+id/titleTextview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleTextview"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/titleTextview"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/background_color"
        android:fontFamily="@font/nanum_square_round_b"
        android:gravity="center_vertical|left"
        android:paddingLeft="3dp"
        android:text="TITLE"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/bagic_edge"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextview"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textTextview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:background="@color/background_color"
            android:fontFamily="@font/nanum_square_round_b"
            android:padding="3dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="4dp"
        android:background="@color/background_color"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout">

        <TextView
            android:id="@+id/createdAtTextview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/bagic_edge"
            android:fontFamily="@font/nanum_square_round_b"
            android:gravity="center_vertical|left"
            android:paddingLeft="3dp"
            android:text="01/01 22:22"
            android:textColor="#434141"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/writerTextview"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/bagic_edge"
            android:fontFamily="@font/nanum_square_round_b"
            android:gravity="center_vertical|left"
            android:paddingLeft="3dp"
            android:text="testusername"
            android:textColor="#434141"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/goodImageview"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="#D32F2F"
            app:srcCompat="@android:drawable/arrow_up_float" />

        <TextView
            android:id="@+id/goodTextview"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/good_edge"
            android:fontFamily="@font/nanum_square_round_b"
            android:gravity="center_vertical|center"
            android:text="0"
            android:textColor="#D32F2F"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/badImageView"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="#303F9F"
            app:srcCompat="@android:drawable/arrow_down_float" />

        <TextView
            android:id="@+id/badTextview"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/bad_edge"
            android:fontFamily="@font/nanum_square_round_b"
            android:gravity="center_vertical|center"
            android:text="0"
            android:textColor="#303F9F"
            android:textSize="16sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>